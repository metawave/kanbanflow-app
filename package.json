{
  "name": "kanbanflow-app",
  "version": "1.0.0-beta.2",
  "author": "Marcel Ryser",
  "description": "A application showing the Kanbanflow Website/App",
  "main": ".webpack/main",
  "keywords": [
    "kanbanflow",
    "kanban",
    "app",
    "webapp"
  ],
  "repository": "https://github.com/metawave/kanbanflow-app.git",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "icons": "npm-run-all icons-png icons-ico icons-icns",
    "icons-png": "./bin/convertToPng KanbanFlowLogo.png resources/icons/512x512.png",
    "icons-icns": "./bin/convertToIcns KanbanFlowLogo.png resources/icon.icns",
    "icons-ico": "./bin/convertToIco KanbanFlowLogo.png resources/icon.ico"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "resources/icon",
        "platforms": [
          "win32",
          "linux",
          "darwin"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32",
            "darwin"
          ],
          "config": {
            "name": "kanbanflow_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "darwin",
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [
            "darwin",
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "icon": "KanbanFlow.png"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "metawave",
              "name": "kanbanflow-app"
            },
            "prerelease": true
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.50",
    "@electron-forge/maker-deb": "6.0.0-beta.50",
    "@electron-forge/maker-rpm": "6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "6.0.0-beta.50",
    "@electron-forge/maker-zip": "6.0.0-beta.50",
    "@electron-forge/maker-dmg": "6.0.0-beta.50",
    "@electron-forge/plugin-webpack": "6.0.0-beta.50",
    "@electron-forge/publisher-github": "^6.0.0-beta.50",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "css-loader": "^3.0.0",
    "electron": "8.2.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "node-loader": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.2.5",
    "url": "^0.11.0"
  }
}
