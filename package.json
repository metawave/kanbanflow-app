{
  "name": "kanbanflow-app",
  "version": "1.0.0-beta.4",
  "author": "Marcel Ryser",
  "description": "A application showing the Kanbanflow Website/App",
  "keywords": [
    "kanbanflow",
    "kanban",
    "app",
    "webapp"
  ],
  "main": "tsc/src/main/index.js",
  "repository": "https://github.com/metawave/kanbanflow-app.git",
  "scripts": {
    "icons": "./bin/generateIcons KanbanFlowLogoTransparent.png",
    "build": "tsc --outDir ./tsc",
    "watch": "tsc -w --outDir ./tsc",
    "lint": "eslint ./src",
    "prettify": "prettier --write --ignore-unknown '**/*.*'",
    "start": "npm run build && electron ./tsc/src/main/index.js",
    "dist": "npm run build && electron-builder",
    "dist:dir": "npm run dist -- --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "ch.metawave.kanbanflow-app",
    "productName": "KanbanFlow App",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-store": "^11.0.0",
    "electron-updater": "6.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@types/semver": "^7.5.8",
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0",
    "eslint": "^10.0.0",
    "globals": "^17.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-sh": "^0.18.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0"
  }
}
