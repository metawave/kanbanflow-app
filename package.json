{
  "name": "kanbanflow-app",
  "version": "1.0.0-beta.3",
  "author": "Marcel Ryser",
  "description": "A application showing the Kanbanflow Website/App",
  "keywords": [
    "kanbanflow",
    "kanban",
    "app",
    "webapp"
  ],
  "repository": "https://github.com/metawave/kanbanflow-app.git",
  "scripts": {
    "compile": "electron-webpack",
    "icons": "npm-run-all icons-png icons-ico icons-icns",
    "icons-png": "./bin/convertToPng KanbanFlowLogo.png resources/icons/512x512.png",
    "icons-icns": "./bin/convertToIcns KanbanFlowLogo.png resources/icon.icns",
    "icons-ico": "./bin/convertToIco KanbanFlowLogo.png resources/icon.ico",
    "dev": "electron-webpack dev",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "ch.metawave.kanbanflow-app",
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-store": "^5.1.0",
    "electron-updater": "^4.2.0",
    "source-map-support": "^0.5.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/node": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "electron": "^8.2.0",
    "electron-builder": "^22.5.0",
    "electron-webpack": "^2.8.0",
    "electron-webpack-eslint": "^6.0.0",
    "electron-webpack-ts": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.0",
    "webpack": "^4.42.0"
  }
}
